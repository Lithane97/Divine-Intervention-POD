	hbox = {
		# innovation_tenaille
		vbox = {
			layoutpolicy_horizontal = expanding

			visible = "[GetVariableSystem.HasValue('DI_culture_era_tab', 'dark_fantastic')]"
			margin_top = 10
			margin_right = 45

			button_standard_hover = {
				visible = "[And(GetScriptedGui('DI_culture_has_innovation_tenaille').IsValid(GuiScope.SetRoot(Culture.MakeScope).End), GetVariableSystem.HasValue( 'DI_culture_era_tab', 'dark_fantastic' ))]"
				size = { 256 66 }
				onrightclick = "[GetScriptedGui('DI_remove_innovation_tenaille').Execute(GuiScope.SetRoot(GetPlayer.MakeScope).End)]"
				button_ignore = none

				hbox = {
					margin = { 3 3 }
					margin_right = 8
					spacing = 5

					background = {
						using = Background_Area
					}

					DI_icon_innovation = {
						texture = @fortifications
						blockoverride "era_texture"
						{
							texture = @dark_fantastic_era
						}
					}

					widget = {
						size = { 150 60 }

						vbox = {
							position = {0 -1}

							ignoreinvisible = yes

							text_multi = {
								name = "name_unlocked"
								layoutpolicy_horizontal = expanding
								text = "innovation_tenaille"
								max_width = 150
								align = nobaseline
								margin = { 3 0 }
								default_format = "#P"
								alpha = 0.7
							}

						}
					}
				}
			}

			button_standard_hover = {
				visible = "[And(Not(GetScriptedGui('DI_culture_has_innovation_tenaille').IsValid(GuiScope.SetRoot(Culture.MakeScope).End)),GetVariableSystem.HasValue( 'DI_culture_era_tab', 'dark_fantastic' ))]"
				size = { 256 66 }
