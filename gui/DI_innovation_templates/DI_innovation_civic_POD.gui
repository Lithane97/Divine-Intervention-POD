				visible = "[And(GetScriptedGui('DI_culture_has_innovation_early_modern_administration').IsValid(GuiScope.SetRoot(Culture.MakeScope).End), GetVariableSystem.HasValue( 'DI_culture_era_tab', 'dark_fantastic' ))]"
