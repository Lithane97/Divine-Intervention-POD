					margin = { 3 3 }
					margin_right = 8
					spacing = 5

					background = {
						using = Background_Area
					}

					DI_icon_innovation = {
						texture = @majesty_01
						blockoverride "era_texture"
						{
							texture = @dark_fantastic_era
						}
					}

					widget = {
						size = { 150 60 }

						vbox = {
							position = {0 -1}

							ignoreinvisible = yes

							text_multi = {
								name = "name_unlocked"
